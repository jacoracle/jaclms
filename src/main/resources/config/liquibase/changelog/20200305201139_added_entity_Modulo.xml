                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey columnNames="modulo_id, temas_id" tableName="temas_modulo"/>
        
        
        
    </changeSet>
    
      <changeSet id="20200305201120-1-relations" author="jhipster">
        
