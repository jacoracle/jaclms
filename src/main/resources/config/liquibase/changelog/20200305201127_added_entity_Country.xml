<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity pais.
    -->
    <changeSet id="20200305201127-1" author="jhipster">
        <createTable tableName="pais">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
  			<column name="nombre" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="iso3" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="codigo_Telefonico" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>
    	

    <changeSet id="20200305201127-1-relations" author="jhipster">
    
		 <createTable tableName="telefono">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>		 	
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="pais_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="telefono" type="bigint">
                <constraints nullable="true" />
            </column>
        </createTable>
	
    </changeSet>
